{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "./build",
        "declaration": true,
        "declarationDir": "./build",
        "resolveJsonModule": true,
        "jsx": "react",
        "jsxFactory": "h",
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "importHelpers": true,
        "sourceMap": true,
        "allowJs": true
    },
    "include": [
        "./src/**/*.js",
        "./src/**/*.jsx",
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": [
        "./**/node_modules",
        "./**/src/old/**/*",
        "./**/src/**/libs/**/*"
    ]
}
