{
    "parser": "@typescript-eslint/parser",
    "env": {
        "commonjs": true,
        "es6": true,
        "node": false,
        "browser": true
    },
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:import/typescript",
        "prettier",
        "prettier/@typescript-eslint"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "ecmaFeatures": {
            "impliedStrict": true
        }
    },
    "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "semi": ["error", "always"],
        "@typescript-eslint/no-unused-vars": [
            "warn",
            {
                "varsIgnorePattern": "h"
            }
        ],
        "camelcase": ["warn"],
        "prefer-const": [
            "error",
            {
                "destructuring": "all"
            }
        ],
        // Space rules to utterly piss on everyone
        "space-before-blocks": "warn",
        "key-spacing": "warn",
        "keyword-spacing": "warn",
        "import/no-unresolved": "off" // ts does this for us anyways, and eslint can't handle webpack aliases
        // temporary so that `eslint --fix` doesn't break stuff
        // "linebreak-style": ["error", "windows"]
    },
    "settings": {
        "import/parsers": { "@typescript-eslint/parser": [".ts", ".tsx"] }
    }
}
